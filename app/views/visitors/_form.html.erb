<%= form_for @visitor, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :ip_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ip_address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email_address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :referrer, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :referrer, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :link_item_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :link_item_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                visitors_path, :class => 'btn' %>
  </div>
<% end %>
